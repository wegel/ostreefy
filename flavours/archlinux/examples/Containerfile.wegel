# This is what I'm using for some of my personal systems.

ARG BASE_IMAGE=ghcr.io/wegel/ostreefy/base/archlinux
FROM ${BASE_IMAGE}

# SSHD
RUN pacman --noconfirm -S openssh && \
    systemctl enable sshd && \
    echo "PermitRootLogin yes" >> /etc/ssh/sshd_config

RUN pacman -S --needed --noconfirm base-devel git wget curl && \
    useradd -m builduser && \
    chown -R builduser:builduser /home/builduser && \
    echo "builduser ALL=(ALL) NOPASSWD: ALL" > /etc/sudoers.d/builduser && \
    sudo -u builduser sh -c '\
      set -eu && \
      for P in yay; do \
        git clone https://aur.archlinux.org/$P.git /home/builduser/$P && \
        cd /home/builduser/$P && \
        makepkg -si --noconfirm && \
        rm -rf /home/builder/$P; \
      done' && \
    sudo -u builduser sh -c '\
      set -eu && \
      for P in visual-studio-code-bin google-chrome wlroots-nvidia-git sway-git; do \
        yay -S --noconfirm $P; \
      done' && \
    rm -rf /home/builduser && rm /etc/sudoers.d/builduser && userdel builduser && \
    pacman -R --noconfirm base-devel autoconf automake bison debugedit gcc make guile pkgconf make flex

RUN pacman --noconfirm -S \
    # Audio/Video
    alsa-utils \
    ffmpeg \
    helvum \
    mpv \
    pavucontrol \
    pipewire-alsa \
    pipewire-audio \
    pipewire-jack \
    pipewire-pulse \
    vlc \
    wireplumber \
    \
    # Browsers
    firefox \
    vivaldi \
    \
    # Fonts
    noto-fonts \
    noto-fonts-emoji \
    otf-droid-nerd \
    otf-firamono-nerd \
    otf-font-awesome \
    ttf-hack-nerd \
    ttf-inconsolata-nerd \
    ttf-meslo-nerd \
    ttf-nerd-fonts-symbols \
    ttf-sourcecodepro-nerd \
    ttf-terminus-nerd \
    ttf-ubuntu-mono-nerd \
    ttf-ubuntu-nerd \
    \
    # System Tools and libs
    bc \
    distrobox \
    efibootmgr \
    fakeroot \
    fzf \
    gvfs-smb \
    htop \
    libsecret \
    rsync \
    tk \
    xorg-xwayland \
    \
    # Terminal Emulators
    foot \
    \
    # Text Editors
    vim \
    \
    # Wayland / Compositors / Shells
    waybar \
    wofi \
    \
    # UI Tools
    gnome-keyring \
    nautilus \
    seahorse \
    \
    # Shell
    zsh \
    # Tools
    less \
    neofetch \
    tig \
    \
    # NVIDIA
    nvidia-dkms
